#!/usr/bin/env bash

if [ -t 1 ]; then
    INTERACTIVE="-it"
else
    INTERACTIVE=""
fi

docker run \
    --rm \
    --label "$connor:dev-server" \
    -e "LOG_LEVEL=$LOG_LEVEL" \
    -v "$connor":/app \
    -v "/app/.venv" \
    -p 8000:8000 \
    "$INTERACTIVE" \
    $(docker build -q $connor) \
    --dev
