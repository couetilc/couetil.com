  <script>
    // link highlight animation

    function throttle(fn: (...args: any[]) => void, interval = 200) {
      let lastTime = 0;
      return function (...args: any[]) {
        const now = Date.now();
        if (now - lastTime >= interval) {
          lastTime = now;
          fn.apply(null, args);
        }
      };
    }
    function nextColor() {
      const colors = [
        'rgba(79, 163, 217, 0.3)',
        'rgba(122, 169, 116, 0.3)',
        'rgba(242, 92, 84, 0.3)',
        'rgba(214, 168, 79, 0.3)',
        'rgba(162, 103, 172, 0.3)',
      ];
      let i = 0;
      return () => {
        const c = colors[i];
        i = (i + 1) % colors.length;
        return c;
      }
    }
    function randomRotation() {
      return (Math.random() - 0.5) * 4; // Random angle between -2 and 2 degrees
    }
    (function () {
      const next = nextColor();
      document.querySelector('nav')!
        .style.setProperty('--highlight-color', next());
      const navLinks = document.querySelectorAll('.nav-item a');
      navLinks.forEach(item => {
        item.addEventListener('mouseenter', throttle(() => {
          document.querySelector('nav')!
            .style.setProperty('--highlight-color', next());
        }));
      });

      // Add random rotation to portfolio item highlights
      const portfolioItems = document.querySelectorAll('.portfolio-item');
      portfolioItems.forEach(item => {
        const highlight = item.querySelector('.highlight') as HTMLElement;
        if (highlight) {
          item.addEventListener('mouseenter', () => {
            const rotation = randomRotation();
            highlight.style.transform = `translate(-50%, -50%) scaleX(4.5) scaleY(12) rotate(${rotation}deg)`;
          });
        }
      });
    })();
  </script>
